#!/bin/sh
# postinst script for neo4j
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)


        # Create @@APP_USER@@ user if it doesn't exist.
        if ! id @@APP_USER@@ > /dev/null 2>&1 ; then
            adduser --system --home /opt/@@APP_NAME@@ --no-create-home \
                --ingroup nogroup --disabled-password --shell /bin/bash \
                @@APP_USER@@
        fi

        chown @@APP_USER@@:adm /var/lib/@@APP_NAME@@ /var/log/@@APP_NAME@@
        chmod 750           /var/lib/@@APP_NAME@@ /var/log/@@APP_NAME@@

		chown -R @@APP_USER@@:adm /opt/@@APP_NAME@@

        chown -R @@APP_USER@@:adm /var/run/@@APP_NAME@@
        chmod -R 750           /var/run/@@APP_NAME@@

		chown -R @@APP_USER@@:adm /var/@@APP_NAME@@
	    chmod -R 750           /var/@@APP_NAME@@

		if [ ! -d @@APP_TMPDIR@@ ]; then
			mkdir @@APP_TMPDIR@@
			chown -R @@APP_USER@@:adm @@APP_TMPDIR@@
			chmod -R 750            @@APP_TMPDIR@@
	    fi


		if [ ! -e /opt/@@APP_NAME@@/logs ]; then
			ln -s /var/log/@@APP_NAME@@ /opt/@@APP_NAME@@/logs
			#chown @@APP_USER@@:adm /opt/@@APP_NAME@@/logs
		fi

		if [ ! -e /opt/@@APP_NAME@@/work ]; then
			ln -s /var/@@APP_NAME@@ /opt/@@APP_NAME@@/work
			#chown @@APP_USER@@:adm /opt/@@APP_NAME@@/temp

		fi

		if [ ! -e /opt/@@APP_NAME@@/temp ]; then
			ln -s @@APP_TMPDIR@@ /opt/@@APP_NAME@@/temp
			#chown @@APP_USER@@:adm /opt/@@APP_NAME@@/temp
		fi




    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


